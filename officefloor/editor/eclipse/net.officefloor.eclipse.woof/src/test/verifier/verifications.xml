<verifications>
	<files>
		<!-- Ensure using latest version -->
		<file>
			<location>${basedir}/../../../pom.xml</location>
			<contains><![CDATA[<dependencyManagement>[^;]*<artifactId>${project.artifactId}</artifactId>[^;]*</dependencyManagement>]]></contains>
		</file>

		<!-- Ensure correct versions in Eclipse plugin -->
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Bundle-Version: ${project.version}]]></contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Require-Bundle:([^:]*)net.officefloor.core;bundle-version="${project.version}"]]></contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Require-Bundle:([^:]*)net.officefloor.gef.bridge;bundle-version="${project.version}"]]></contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Require-Bundle:([^:]*)net.officefloor.gef.editor;bundle-version="${project.version}"]]></contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Require-Bundle:([^:]*)net.officefloor.gef.configurer;bundle-version="${project.version}"]]></contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Require-Bundle:([^:]*)net.officefloor.gef.ide;bundle-version="${project.version}"]]></contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Require-Bundle:([^:]*)net.officefloor.woof;bundle-version="${project.version}"]]></contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Require-Bundle:([^:]*)net.officefloor.gef.woof;bundle-version="${project.version}"]]></contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Require-Bundle:([^:]*)net.officefloor.eclipse.ide;bundle-version="${project.version}"]]></contains>
		</file>
	</files>
</verifications>
