			<contains><![CDATA[<version>${pom.version}</version>(\s)*</parent>]]></contains>
		</file>
		<file>
			<location>plugins/pom.xml</location>
			<contains><![CDATA[<version>${project.version}</version>(\s)*</parent>]]></contains>
