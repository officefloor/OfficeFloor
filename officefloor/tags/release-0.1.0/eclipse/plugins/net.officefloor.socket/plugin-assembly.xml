<assembly>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<!-- Classes -->
			<directory>${project.build.outputDirectory}</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<!-- Resources -->
			<directory>${project.basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<!-- MANIFEST.MF configured in archive of pom configuration -->
				<include>plugin.xml</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>${pom.groupId}:officeplugin_socket</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>