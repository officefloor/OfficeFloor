import java.io.*;


// Deletes a directory
deleteDirectory( dir ) {
	if (!(dir.exists())) {
		return;
	}
	for ( File child : dir.listFiles() ) {
		if (child.isFile()) {
			child.delete();
		}
	}
	for ( File child : dir.listFiles() ) {
		deleteDirectory( child );
	}
	dir.delete();
}


