<desk>
	<external-flows>
		<external-flow name="OUTPUT" argument-type="java.lang.Float" />
		<external-flow name="ESCALATION" argument-type="java.lang.Exception" />
	</external-flows>
	<external-managed-objects>
		<external-managed-object name="OBJECT"
			object-type="java.sql.Connection" />
	</external-managed-objects>
	<works>
		<work name="WORK" source="net.example.ExampleWorkSource">
			<work-task name="WORK_TASK">
				<task-object name="PARAMETER" object-type="java.lang.Integer"
					parameter="true" />
			</work-task>
		</work>
	</works>
	<tasks>
		<task name="INPUT" public="true" work="WORK" task="WORK_TASK">
			<task-escalation escalation-type="java.lang.Exception">
				<external-flow name="ESCALATION" />
			</task-escalation>
		</task>
	</tasks>
</desk>