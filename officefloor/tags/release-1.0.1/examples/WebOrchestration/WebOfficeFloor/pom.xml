<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.officefloor.example.weborchestration</groupId>
		<artifactId>WebOrchestration</artifactId>
		<version>0.3.0</version>
	</parent>
	<artifactId>WebOfficeFloor</artifactId>
	<version>0.3.0</version>
	<packaging>jar</packaging>
	<name>WebOfficeFloor</name>
	<description>Web components of the OfficeFloor Example</description>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>net.officefloor.maven</groupId>
				<artifactId>maven-officefloor-plugin</artifactId>
				<configuration>
					<port>13778</port>
					<processName>example</processName>
					<officeFloorLocation>net/officefloor/example/weborchestration/WebOfficeFloor.officefloor</officeFloorLocation>
					<jvmOptions>
						<jvmOption>-Djava.naming.factory.initial=org.apache.openejb.client.LocalInitialContextFactory</jvmOption>
						<jvmOption>-Dopenejb.deployments.classpath.include=.*WebOrchestration.*</jvmOption>
					</jvmOptions>
					<verbose>false</verbose>
				</configuration>
				<executions>
					<execution>
						<id>start-OfficeFloor</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>start</goal>
							<goal>open</goal>
						</goals>
					</execution>
					<execution>
						<id>stop-OfficeFloor</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>stop</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<!-- OpenEJB required to start EJB -->
						<groupId>org.apache.openejb</groupId>
						<artifactId>openejb-core</artifactId>
						<version>3.1.3</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<!-- OpenEJB must be placed first due to classpath issues -->
			<groupId>org.apache.openejb</groupId>
			<artifactId>openejb-core</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>WebOrchestration-ejb</artifactId>
		</dependency>
		<dependency>
			<groupId>net.officefloor.core</groupId>
			<artifactId>officecompiler</artifactId>
		</dependency>
		<dependency>
			<groupId>net.officefloor.plugin</groupId>
			<artifactId>officeplugin_socket</artifactId>
		</dependency>
		<dependency>
			<groupId>net.officefloor.plugin</groupId>
			<artifactId>officeplugin_web</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>WebTests</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>commons-httpclient</groupId>
			<artifactId>commons-httpclient</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>