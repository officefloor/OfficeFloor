<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="default" extends="struts-default">
		<action name="initialState"
			class="net.officefloor.example.weborchestration.InitialStateAction">
			<result>/initialState.jsp</result>
		</action>
		<action name="testReset"
			class="net.officefloor.example.weborchestration.TestResetAction">
			<result>/index.jsp</result>
		</action>
		<action name=""
			class="net.officefloor.example.weborchestration.IndexAction">
			<result>/index.jsp</result>
		</action>
		<action name="index"
			class="net.officefloor.example.weborchestration.IndexAction">
			<result>/index.jsp</result>
		</action>
		<action name="login"
			class="net.officefloor.example.weborchestration.LoginAction">
			<result name="logout">/logout.jsp</result>
			<result name="re-login">/login.jsp</result>
			<result name="success" type="chain">index</result>
		</action>
		<action name="logout"
			class="net.officefloor.example.weborchestration.LogoutAction">
			<result name="success" type="chain">index</result>
		</action>
		<action name="createCustomer"
			class="net.officefloor.example.weborchestration.CreateCustomerAction">
			<result name="re-create">/createCustomer.jsp</result>
			<result name="success" type="chain">index</result>
		</action>
		<action name="shoppingCart"
			class="net.officefloor.example.weborchestration.ShowShoppingCartAction">
			<result name="login">/login.jsp</result>
			<result name="success">/shoppingCart.jsp</result>
		</action>
		<action name="selectProducts"
			class="net.officefloor.example.weborchestration.SelectProductsAction">
			<result name="success">/selectProducts.jsp</result>
		</action>
		<action name="productsSelected"
			class="net.officefloor.example.weborchestration.ProductsSelectedAction">
			<result name="login">/login.jsp</result>
			<result name="error">/selectProducts.jsp</result>
			<result name="success" type="chain">shoppingCart</result>
		</action>
		<action name="quote"
			class="net.officefloor.example.weborchestration.QuoteAction">
			<result name="login">/login.jsp</result>
			<result name="success">/quote.jsp</result>
		</action>
		<action name="purchaseShoppingCart"
			class="net.officefloor.example.weborchestration.PurchaseShoppingCartAction">
			<result name="login">/login.jsp</result>
			<result name="success">/invoice.jsp</result>
		</action>
		<action name="purchaseQuote"
			class="net.officefloor.example.weborchestration.PurchaseQuoteAction">
			<result name="login">/login.jsp</result>
			<result name="success">/invoice.jsp</result>
		</action>
		<action name="deliverProducts"
			class="net.officefloor.example.weborchestration.DeliverProductsAction">
			<result name="success">/deliverProducts.jsp</result>
		</action>
		<action name="productsDelivered"
			class="net.officefloor.example.weborchestration.ProductsDeliveredAction">
			<result name="error">/deliverProducts.jsp</result>
			<result name="success" type="chain">index</result>
		</action>
	</package>

</struts>