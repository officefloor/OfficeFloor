<html>
	<head>
		<title>EJB Orchestration Example</title>
	</head>
	<body>
		<h1>Quote</h1>
		<br />
		<p>Customer: ${customer.name}</p>
		<table id="items">
			<tr>
				<th>Product</th>
				<th>Price per item</th>
				<th>Quantity</th>
				<th>Line Price</th>
			</tr>
			<!-- [QuoteItem] -->
			<tr>						
				<td>${product.name}</td>
				<td>${productPrice}</td>
				<td>${quantity}</td>
				<td>${quoteItemPrice}</td>
			</tr>
			<!-- [Tail] -->
		</table>
		<form action="#{PurchaseQuote}">
			<input type="hidden" name="quoteId" value="${quoteId}" />
			<input name="purchase" value="Purchase" type="submit" />
		<form>
	</body>
</html>