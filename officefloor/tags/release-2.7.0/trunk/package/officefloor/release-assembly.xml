<assembly>
	<id>release</id>
	<formats>
		<!-- Packaged release bundles -->
		<format>zip</format>
		<format>tar.gz</format>
		<!-- Provide directory for testing -->
		<format>dir</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<!-- OfficeBuilding (configuration to be filtered) -->
			<outputDirectory>/</outputDirectory>
			<outputFileNameMapping>/</outputFileNameMapping>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>**/*.properties</include>
				</includes>
				<filtered>true</filtered>
			</unpackOptions>
			<includes>
				<include>net.officefloor.core:officebuilding:zip:release</include>
			</includes>
			<useTransitiveDependencies>false</useTransitiveDependencies>
		</dependencySet>
		<dependencySet>
			<!-- OfficeBuilding (libraries/binaries) -->
			<outputDirectory>/</outputDirectory>
			<outputFileNameMapping>/</outputFileNameMapping>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>**/*.properties</exclude>
				</excludes>
				<filtered>false</filtered>
			</unpackOptions>
			<includes>
				<include>net.officefloor.core:officebuilding:zip:release</include>
			</includes>
			<useTransitiveDependencies>false</useTransitiveDependencies>
		</dependencySet>
		<dependencySet>
			<!-- OfficeBuilding additions -->
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>net.officefloor.plugin:officeplugin_base</include>
				<include>net.officefloor.plugin:officeplugin_war</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>