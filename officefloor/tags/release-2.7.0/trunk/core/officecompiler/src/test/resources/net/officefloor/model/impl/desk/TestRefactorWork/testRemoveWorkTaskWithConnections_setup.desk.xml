<desk>
    <external-managed-objects>
        <external-managed-object name="MO" />
    </external-managed-objects>
    <external-flows>
        <external-flow name="FLOW" />
    </external-flows>
    <works>
        <work name="WORK" source="net.example.ExampleWorkSource">
            <work-task name="TASK_A">
                <task-object name="OBJECT">
                    <external-managed-object
                        name="MO" />
                </task-object>
            </work-task>
            <work-task name="TASK_B" />
        </work>
    </works>
    <tasks>
        <task name="TASK" work="WORK" task="TASK_A">
            <task-flow name="FLOW_A">
                <external-flow name="FLOW" />
            </task-flow>
            <task-flow name="FLOW_B">
                <task name="TASK" />
            </task-flow>
            <next-task name="TASK" />
            <next-external-flow name="FLOW" /> <!-- focus on testing connections -->
            <task-escalation escalation-type="java.sql.SQLException">
                <external-flow name="FLOW" />
            </task-escalation>
            <task-escalation escalation-type="java.io.IOException">
                <task name="TASK" />
            </task-escalation>
        </task>
    </tasks>
</desk>