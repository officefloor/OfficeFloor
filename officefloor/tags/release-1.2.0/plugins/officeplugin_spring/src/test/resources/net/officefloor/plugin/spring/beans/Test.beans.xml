<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="test" class="net.officefloor.plugin.spring.beans.TestBean">
        <property name="dependency" ref="dependency" />
    </bean>

    <bean id="dependency" class="net.officefloor.plugin.spring.beans.DependencyBean" />

    <!-- Makes Office Floor dependencies available within Spring -->
    <bean id="testFactory"
        class="net.officefloor.plugin.spring.beanfactory.DependencyFactoryBean">
        <property name="type" value="java.sql.Connection" />
    </bean>

</beans>