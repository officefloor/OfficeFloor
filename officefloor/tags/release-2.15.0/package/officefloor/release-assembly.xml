<assembly>
	<id>release</id>
	<formats>
		<!-- Packaged release bundles -->
		<format>zip</format>
		<format>tar.gz</format>
		<!-- Provide directory for testing -->
		<format>dir</format>
	</formats>
	<fileSets>
		<fileSet>
			<!-- classpath.properties -->
			<outputDirectory>lib</outputDirectory>
			<directory>${project.build.directory}</directory>
			<includes>
				<include>classpath.properties</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<!-- OfficeFloor.properties (to include package properties with filtering) -->
			<outputDirectory>/</outputDirectory>
			<outputFileNameMapping>/</outputFileNameMapping>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>**/*.properties</include>
				</includes>
				<excludes>
					<!-- Don't include pom.properties -->
					<exclude>META-INF/**</exclude>
				</excludes>
				<filtered>true</filtered>
			</unpackOptions>
			<includes>
				<include>net.officefloor.core:officebuilding</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<!-- OfficeBuilding Layout (minus properties without filtering) -->
			<outputDirectory>/</outputDirectory>
			<outputFileNameMapping>/</outputFileNameMapping>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<!-- Exclude class code and META-INF information -->
					<exclude>net/**</exclude>
					<exclude>sun/**</exclude>
					<exclude>META-INF/**</exclude>
					<exclude>**/*.properties</exclude>
				</excludes>
			</unpackOptions>
			<includes>
				<include>net.officefloor.core:officebuilding</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<!-- OfficeFloor package jars -->
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>