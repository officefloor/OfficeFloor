<html>
	<head>
		<title>EJB Orchestration Example</title>
	</head>
	<body>
		<h1>Shopping Cart</h1>
		<br />
		<p>Customer: ${name}</p>
		<table id="items">
			<tr>
				<th>Product</th>
				<th>Quantity</th>
				<th>Price per item</th>
			</tr>
			<!-- [ShoppingCartItem] -->
			<tr>						
				<td>${product.name}</td>
				<td>${quantity}</td>
				<td>${product.price}</td>
			</tr>
			<!-- [Tail] -->
		</table>
		<a href="#{SelectProducts}">Continue Shopping</a>
		<a href="#{Quote}">Quote</a>
		<form action="#{PurchaseShoppingCart}">
			<input name="purchase" type="submit" value="Purchase" />
        </form>
	</body>
</html>