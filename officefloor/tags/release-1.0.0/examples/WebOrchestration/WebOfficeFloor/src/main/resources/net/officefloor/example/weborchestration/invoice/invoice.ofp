<html>
	<head>
		<title>EJB Orchestration Example</title>
	</head>
	<body>
		<h1>Invoice</h1>
		<br />
		<p>Customer: ${customer.name}</p>
		<table id="lineItems">
			<tr>
				<th>Product</th>
				<th>Price per item</th>
				<th>Quantity</th>
				<th>Allocated</th>
				<th>Line Price</th>
			</tr>
			<!-- [InvoiceLineItem] -->
			<tr>						
				<td>${product.name}</td>
				<td>${productPrice}</td>
				<td>${quantity}</td>
				<td>${productAllocation.quantityAllocated}</td>
				<td>${invoiceLineItemPrice}</td>
			</tr>
			<!-- [Tail] -->
		</table>
		<a href="#{index}">Home</a>
	</body>
</html>