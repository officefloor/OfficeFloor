<verifications>
	<files>
		<!-- Ensure releasing latest version -->
		<file>
			<location>${basedir}/../../../pom.xml</location>
			<contains><![CDATA[<dependencyManagement>[^;]*<artifactId>${project.artifactId}</artifactId>(\s)*<version>${project.version}</version>[^;]*</dependencyManagement>]]></contains>
		</file>

		<!-- Ensure correct versions in Eclipse plugin -->
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Bundle-Version: ${project.version}]]></contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Require-Bundle:([^:]*)net.officefloor.core;bundle-version="@{net.officefloor.core_version}"]]></contains>
		</file>
	</files>
</verifications>