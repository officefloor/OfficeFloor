<?xml version="1.0" encoding="UTF-8"?>
<web-app>

	<!-- WoOF functionality -->
	<filter>
		<filter-name>WoOF</filter-name>
		<filter-class>net.officefloor.plugin.woof.servlet.WoofServletFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>WoOF</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Necessary to filter a Servlet -->
	<servlet>
		<servlet-name>Mock</servlet-name>
		<servlet-class>net.officefloor.tutorial.demoapp.servlet.MockHttpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Mock</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

</web-app>