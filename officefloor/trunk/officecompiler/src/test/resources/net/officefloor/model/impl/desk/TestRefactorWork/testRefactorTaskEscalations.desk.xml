<desk>
    <external-flows>
        <external-flow name="FLOW" />
    </external-flows>
    <works>
        <work name="WORK" source="net.example.ExampleWorkSource">
            <work-task name="WORK_TASK" />
        </work>
    </works>
    <tasks>
        <task name="TASK" work="TASK" task="WORK_TASK">
            <task-escalation type="java.lang.RuntimeException">
                <external-flow name="FLOW" />
            </task-escalation>
            <task-escalation type="java.sql.SQLException" />
            <task-escalation type="java.lang.Error">
                <task name="TASK" />
            </task-escalation>
            <task-escalation type="java.lang.Exception">
                <external-flow name="FLOW" />
            </task-escalation>
        </task>
    </tasks>
</desk>