<desk>
    <external-flows>
        <external-flow name="FLOW_REMOVE" />
        <external-flow name="FLOW_CHANGE_DETAILS" />
        <external-flow name="FLOW_RENAME" />
        <external-flow name="FLOW_REORDER_A" />
    </external-flows>
    <works>
        <work name="WORK" source="net.example.ExampleWorkSource">
            <work-task name="WORK_TASK" />
        </work>
    </works>
    <tasks>
        <task name="TASK" work="WORK" task="WORK_TASK" return-type="java.lang.Short">
            <task-flow name="REMOVE">
                <external-flow name="FLOW_REMOVE" />
            </task-flow>
            <task-flow name="CHANGE_DETAILS" key="KEY_ONE"
                argument-type="java.lang.Object">
                <external-flow name="FLOW_CHANGE_DETAILS" />
            </task-flow>
            <task-flow name="RENAME_OLD">
                <external-flow name="FLOW_RENAME" />
            </task-flow>
            <task-flow name="REORDER_A">
                <external-flow name="FLOW_REORDER_A" />
            </task-flow>
            <task-flow name="REORDER_B">
                <task name="TASK" />
            </task-flow>
        </task>
    </tasks>
</desk>