<desk>
	<external-flows>
		<external-flow name="FLOW" argument-type="java.lang.Object" />
	</external-flows>
	<works>
		<work name="WORK" source="net.example.ExampleWorkSource">
			<work-task name="WORK_TASK" />
		</work>
	</works>
	<tasks>
		<task name="TASK_A" work="WORK" task="WORK_TASK" return-type="java.lang.Integer">
			<task-flow name="FLOW_TO_TASK" argument-type="java.lang.Double">
				<task name="TASK_B" />
			</task-flow>
			<task-flow name="FLOW_TO_EXT_FLOW" argument-type="java.lang.String">
				<external-flow name="FLOW" />
			</task-flow>
			<!--
				Should not have both next-task and next-external-flow but have in
				this case for testing
			-->
			<next-task name="TASK_B" />
			<next-external-flow name="FLOW" />
			<task-escalation escalation-type="java.lang.Exception">
				<task name="TASK_B" />
			</task-escalation>
			<task-escalation escalation-type="java.lang.Error">
				<external-flow name="FLOW" />
			</task-escalation>
		</task>
		<task name="TASK_B" work="WORK" task="WORK_TASK" return-type="java.lang.String">
			<!--
				not including flows and escalations as testing being linked to,
				however as same work task should have them
			-->
			<task-flow name="FLOW" argument-type="java.lang.Object">
				<task name="TASK_A" />
			</task-flow>
			<next-task name="TASK_A" />
			<task-escalation escalation-type="java.lang.Exception">
				<task name="TASK_A" />
			</task-escalation>
		</task>
	</tasks>
</desk>