		object-type="java.sql.Connection" x="-10" y="-11"> <properties>
		<property name="mo.one" value="MO_ONE" /> <property name="mo.two"
		value="MO_TWO" /> </properties> <dependencies> <dependency
		name="dependencyOne" key="DEP_ONE" object-type="java.lang.String">
		<external-managed-object name="mo" /> </dependency> <dependency
