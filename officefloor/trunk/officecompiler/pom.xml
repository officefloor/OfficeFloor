<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.officefloor</groupId>
		<artifactId>officefloor</artifactId>
		<version>0.0.1</version>
	</parent>
	<artifactId>officecompiler</artifactId>
	<name>Office Floor Compiler</name>
	<description>Compiler for the Office Floor</description>
	<properties>
		<office_version>0.0.1</office_version>
	</properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/main/test</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
	<dependencies>
		<dependency>
			<groupId>net.officefloor</groupId>
			<artifactId>officeframe</artifactId>
			<version>${office_version}</version>
		</dependency>
		<dependency>
			<groupId>net.officefloor</groupId>
			<artifactId>officemodel</artifactId>
			<version>${office_version}</version>
		</dependency>
		<dependency>
			<groupId>net.officefloor</groupId>
			<artifactId>officexml</artifactId>
			<version>${office_version}</version>
		</dependency>
		<dependency>
			<groupId>net.officefloor</groupId>
			<artifactId>officeapi</artifactId>
			<version>${office_version}</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
		</dependency>
		<dependency>
			<groupId>easymock</groupId>
			<artifactId>easymock</artifactId>
			<version>1.1</version>
		</dependency>
	</dependencies>
</project>

