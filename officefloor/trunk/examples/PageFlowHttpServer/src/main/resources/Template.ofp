<html>
	<body>
		<!-- [listItems] -->
		<table>
			<tr>
				<td>Name</td>
				<td>Description</td>
			</tr>
			<!-- [items] -->
			<tr>
				<td>${name}</td>
				<td>${description}</td>
			</tr>
			<!-- [endItems] -->
		</table>
		<p><a href="#{clear}">Clear</a></p>
		<!-- [noItems] -->
		<p>Currently no items in list.</p>
		<!-- [endListItems] -->
		<form action="#{addItem}">
			Name: <input name="name" type="text" /> 
			Description: <input name="description" type="text" />
			<input type="submit" value="Add" />
		</form>
	</body>
</html>