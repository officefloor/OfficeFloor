<html>
	<head>
		<title>EJB Orchestration Example</title>
	</head>
	<body>
		<h1>Select Products</h1>
		<form action="#{ProductsSelected}" method="post">
			<table id="products">
				<tr>
					<th>Product</th>
					<th>Price</th>
					<th>Quantity</th>
					<th /> <!-- Error -->
				</tr>
				<!-- [Product] -->
				<tr>
					<input type="hidden" name="products[${rowIndex}].productId" value="${productId}" />
					<input type="hidden" name="products[${rowIndex}].name" value="${name}" />
					<input type="hidden" name="products[${rowIndex}].price" value="${price}" />
						
					<td>${name}</td>
					<td>${price}</td>
					<td><input type="text" name="products[${rowIndex}].quantity" value="${quantity}" /></td>
					<td>${error}</td>
				</tr>
				<!-- [Tail] -->
			</table>
			<input name="addProducts" type="submit" value="Add Products" />
			<input name="cancel" type="submit" value="Cancel" action="#{Cancel}" />
		</form>
	</body>
</html>