<html>
	<head>
		<title>EJB Orchestration Example</title>
	</head>
	<body>
		<h1>Deliver Products</h1>
		<form action="#{ProductsDelivered}" method="POST">
			<table id="products">
				<tr>
					<th>Product</th>
					<th>Quantity</th>
					<th /> <!-- Error -->
				</tr>
				<!-- [Product] -->
				<tr>
					<input name="products{${rowIndex}}.productId" type="hidden" value="${productId}" />
					<input name="products{${rowIndex}}.name" type="hidden" value="${name}" />
						
					<td>${name}</td>
					<td><input name="products{${rowIndex}}.quantity" type="text" value="${quantity}" /></td>
					<td>${error}</td>
				</tr>
				<!-- [Tail] -->
			</table>
			<input name="deliver" type="submit" value="Deliver" />
		</form>
		<form action="#{index}">
			<input name="cancel" type="submit" value="Cancel" />
		</form>
	</body>
</html>