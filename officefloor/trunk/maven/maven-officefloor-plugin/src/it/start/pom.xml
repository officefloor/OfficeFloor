<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>@project.groupId@.test</groupId>
	<artifactId>@project.artifactId@-test</artifactId>
	<version>@project.version@</version>
	<name>Test for the OfficeFloor maven plugin</name>
	<description>Tests the OfficeFloor maven plugin</description>
	<build>
		<plugins>
			<plugin>
				<groupId>@project.groupId@</groupId>
				<artifactId>@project.artifactId@</artifactId>
				<configuration>
					<port>10102</port>
					<officeFloorLocation>net/officefloor/maven/TestOfficeFloor.officefloor</officeFloorLocation>
				</configuration>
				<executions>
					<execution>
						<phase>test</phase>
						<goals>
							<goal>start</goal>
							<goal>open</goal>
							<goal>stop</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>@project.groupId@</groupId>
			<artifactId>@project.artifactId@</artifactId>
			<version>@project.version@</version>
		</dependency>
	</dependencies>
</project>