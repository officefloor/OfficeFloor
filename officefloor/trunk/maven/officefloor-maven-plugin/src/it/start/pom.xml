<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>@project.groupId@.test</groupId>
	<artifactId>@project.artifactId@-test</artifactId>
	<version>@project.version@</version>
	<name>Test for the OfficeFloor maven plugin</name>
	<description>Tests the OfficeFloor maven plugin</description>
	<build>
		<plugins>
			<plugin>
				<groupId>@project.groupId@</groupId>
				<artifactId>@project.artifactId@</artifactId>
				<version>@project.version@</version>
				<configuration>
					<port>10102</port>
					<processName>@project.artifactId@</processName>
					<officeFloorLocation>net/officefloor/maven/start/TestOfficeFloor.officefloor</officeFloorLocation>
					<office>OFFICE</office>
					<work>SECTION.WORK</work>
					<task>createFile</task>
					<parameter>${project.build.directory}/OfficeFloorRun.txt</parameter>
					<jvmOptions>
						<jvmOption>-Done=a</jvmOption>
					</jvmOptions>
				</configuration>
				<executions>
					<execution>
						<phase>test</phase>
						<goals>
							<goal>start</goal>
							<goal>open</goal>
							<goal>invoke</goal>
							<goal>stop</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>