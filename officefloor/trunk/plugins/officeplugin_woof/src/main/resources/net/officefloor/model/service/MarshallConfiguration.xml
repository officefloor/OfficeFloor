<?xml version="1.0" encoding="UTF-8"?>
<marshall type="net.officefloor.model.service.ServicesModel"
	element="services">

	<!-- MANAGED OBJECTS -->
	<collection method="getServiceManagedObjects" element="managed-objects">
		<item type="net.officefloor.model.service.ServiceManagedObjectModel"
			element="managed-object">
			<attributes>
				<attribute method="getServiceManagedObjectName" attribute="name" />
				<attribute method="getManagedObjectSourceClassName"
					attribute="source" />
				<attribute method="getX" attribute="x" />
				<attribute method="getY" attribute="y" />
			</attributes>
			<collection method="getProperties">
				<item type="net.officefloor.model.service.PropertyModel"
					element="property">
					<attributes>
						<attribute method="getName" attribute="name" />
						<attribute method="getValue" attribute="value" />
					</attributes>
				</item>
			</collection>
			<collection method="getPropertyFiles">
				<item type="net.officefloor.model.service.PropertyFileModel"
					element="property-file">
					<attributes>
						<attribute method="getPath" attribute="path" />
					</attributes>
				</item>
			</collection>
			<collection method="getObjectTypes">
				<item type="net.officefloor.model.service.ServiceManagedObjectTypeModel"
					element="object-type">
					<attributes>
						<attribute method="getObjectType" attribute="type" />
					</attributes>
				</item>
			</collection>
		</item>
	</collection>

	<!-- TEAMS -->
	<collection method="getServiceTeams" element="teams">
		<item type="net.officefloor.model.service.ServiceTeamModel"
			element="team">
			<attributes>
				<attribute method="getServiceTeamName" attribute="name" />
				<attribute method="getTeamSourceClassName" attribute="source" />
				<attribute method="getX" attribute="x" />
				<attribute method="getY" attribute="y" />
			</attributes>
			<collection method="getProperties">
				<item type="net.officefloor.model.service.PropertyModel"
					element="property">
					<attributes>
						<attribute method="getName" attribute="name" />
						<attribute method="getValue" attribute="value" />
					</attributes>
				</item>
			</collection>
			<collection method="getPropertyFiles">
				<item type="net.officefloor.model.service.PropertyFileModel"
					element="property-file">
					<attributes>
						<attribute method="getPath" attribute="path" />
					</attributes>
				</item>
			</collection>
		</item>
	</collection>

</marshall>