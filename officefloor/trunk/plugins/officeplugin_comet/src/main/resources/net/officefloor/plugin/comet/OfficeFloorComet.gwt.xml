<?xml version="1.0" encoding="UTF-8"?>
<module rename-to="test">

	<!-- Enable use of RPC to call on the Server -->
	<inherits name="com.google.gwt.user.RemoteService" />
	
	<!-- Generate adapters for the CometListener interfaces -->
	<generate-with
		class="net.officefloor.plugin.comet.generate.CometListenerAdapaterGenerator">
		<when-type-assignable
			class="net.officefloor.plugin.comet.api.CometListener" />
	</generate-with>

	<!-- Generate map of adapters -->
	<generate-with
		class="net.officefloor.plugin.comet.generate.CometListenerMapGenerator">
		<when-type-is
			class="net.officefloor.plugin.comet.internal.CometListenerMap" />
	</generate-with>

	<!-- Code -->
	<source path="api" />
	<source path="internal" />
</module>