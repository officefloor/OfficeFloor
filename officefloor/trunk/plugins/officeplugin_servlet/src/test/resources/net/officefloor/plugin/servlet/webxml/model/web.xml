<web-app version="2.5">

	<context-param>
		<param-name>one</param-name>
		<param-value>A</param-value>
	</context-param>
	<context-param>
		<param-name>two</param-name>
		<param-value>B</param-value>
	</context-param>

	<mime-mapping>
		<extension>txt</extension>
		<mime-type>text/plain</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>html</extension>
		<mime-type>text/html</mime-type>
	</mime-mapping>

	<servlet>
		<servlet-name>Servlet1</servlet-name>
		<servlet-class>net.officefloor.ExampleServlet</servlet-class>
		<init-param>
			<param-name>a</param-name>
			<param-value>ONE</param-value>
		</init-param>
		<init-param>
			<param-name>b</param-name>
			<param-value>TWO</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>Servlet2</servlet-name>
		<servlet-class>net.officefloor.AnotherServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Servlet1</servlet-name>
		<url-pattern>/path/*</url-pattern>
		<url-pattern>*.extension</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Servlet2</servlet-name>
		<url-pattern>/exact/path</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>Filter1</filter-name>
		<filter-class>net.officefloor.ExampleFilter</filter-class>
		<init-param>
			<param-name>x</param-name>
			<param-value>m</param-value>
		</init-param>
		<init-param>
			<param-name>y</param-name>
			<param-value>n</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>Filter2</filter-name>
		<filter-class>net.officefloor.AnotherFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>Filter1</filter-name>
		<url-pattern>/exact/path</url-pattern>
		<url-pattern>/path/*</url-pattern>
		<url-pattern>*.extension</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Filter2</filter-name>
		<servlet-name>Servlet1</servlet-name>
		<servlet-name>Servlet2</servlet-name>
	</filter-mapping>

</web-app>