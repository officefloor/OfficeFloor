<desk>
    <external-flows>
        <external-flow name="FLOW_REMOVE" />
        <external-flow name="FLOW_RUNTIME" />
        <external-flow name="FLOW_REORDER" />
    </external-flows>
    <works>
        <work name="WORK" source="net.example.ExampleWorkSource">
            <work-task name="WORK_TASK" />
        </work>
    </works>
    <tasks>
        <task name="TASK" work="WORK" task="WORK_TASK">
            <task-escalation escalation-type="java.lang.RuntimeException">
                <external-flow name="FLOW_RUNTIME" />
            </task-escalation>
            <task-escalation escalation-type="java.sql.SQLException" />
            <task-escalation escalation-type="java.lang.Error">
                <task name="TASK" />
            </task-escalation>
            <task-escalation escalation-type="java.lang.Exception">
                <external-flow name="FLOW_REORDER" />
            </task-escalation>
        </task>
    </tasks>
</desk>