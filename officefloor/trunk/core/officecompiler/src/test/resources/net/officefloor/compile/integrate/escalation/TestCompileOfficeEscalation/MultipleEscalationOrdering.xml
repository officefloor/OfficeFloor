<context>
	<office-floor>
		<teams>
			<team name="TEAM" source="ONE_PERSON" />
		</teams>
		<offices>
			<office name="OFFICE" source="OFFICE" location="office">
				<team name="OFFICE_TEAM">
					<office-floor-team name="TEAM" />
				</team>
			</office>
		</offices>
	</office-floor>
	<office>
		<escalations>
			<!-- Reverse order to ensure order by type -->
			<escalation escalation-type="java.lang.Exception">
				<handler section="SECTION" input="INPUT" />
			</escalation>
			<escalation escalation-type="java.sql.SQLException">
				<handler section="SECTION" input="INPUT" />
			</escalation>
			<escalation escalation-type="java.io.IOException">
				<handler section="SECTION" input="INPUT" />
			</escalation>
		</escalations>
		<teams>
			<team name="OFFICE_TEAM" />
		</teams>
		<sections>
			<section name="SECTION" source="DESK" location="desk">
				<input name="INPUT" />
				<responsibility name="RESPONSIBILITY">
					<team name="OFFICE_TEAM" />
				</responsibility>
			</section>
		</sections>
	</office>
	<desk>
		<works>
			<work name="WORK" source="CLASS">
				<properties>
					<property name="class.name" value="${testcase}$EscalationWork" />
				</properties>
				<work-task name="handle">
					<task-object name="Throwable" parameter="true" />
				</work-task>
			</work>
		</works>
		<tasks>
			<task name="INPUT" work="WORK" task="handle" public="true" />
		</tasks>
	</desk>
</context>