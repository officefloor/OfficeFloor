<verifications>
	<files>
		<file>
			<!-- Ensure releasing latest version -->
			<location>${basedir}/../../pom.xml</location>
			<contains><![CDATA[<dependencyManagement>[^;]*<artifactId>${project.artifactId}</artifactId>(\s)*<version>${project.version}</version>[^;]*</dependencyManagement>]]></contains>
		</file>
		<file>
			<!-- Ensure install pom installs latest version -->
			<location>${basedir}/../../src/site/resources/pom.xml</location>
			<contains><![CDATA[<install.version>${project.version}</install.version>]]></contains>
		</file>
	</files>
</verifications>