<verifications>
	<files>
		<file>
			<!-- Ensure using latest version -->
			<location>${basedir}/../../pom.xml</location>
			<contains><![CDATA[<dependencyManagement>[^;]*<artifactId>${project.artifactId}</artifactId>[^;]*</dependencyManagement>]]></contains>
		</file>
		
		<file>
			<!-- Ensure testing with latest version -->
			<location>${basedir}/src/test/resources/net/officefloor/building/classpath/pom.test.xml</location>
			<contains><![CDATA[<version>${project.version}</version>(\s)*</parent>]]></contains>
		</file>

		<file>
			<!-- Ensure OfficeConsole using latest version -->
			<location>${basedir}/src/main/resources/bin/officeconsole</location>
			<contains><![CDATA[OFFICE_FLOOR_VERSION=${project.version}]]></contains>
		</file>
		
	</files>
</verifications>