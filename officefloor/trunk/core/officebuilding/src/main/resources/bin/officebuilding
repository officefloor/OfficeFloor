#!/bin/sh

# Fail immediately
set -e

# Default OFFICE_FLOOR_HOME to bin/..
if [ -z ${OFFICE_FLOOR_HOME} ]; then
	# Move to OFFICE_FLOOR_HOME directory
	SCRIPT=`readlink -f $0`
	BIN_DIR=`dirname $SCRIPT`
	cd ${BIN_DIR}/..

	# Obtain the OFFICE_FLOOR_HOME location
	export OFFICE_FLOOR_HOME=$PWD
fi

# Execute from OFFICE_FLOOR_HOME
cd ${OFFICE_FLOOR_HOME}

# Run OfficeFloor
java \
	${OFFICE_BUILDING_JVM_OPTIONS} \
	-cp lib/boot.jar \
	net.officefloor.bootstrap.Bootstrap \
	net.officefloor.building.console.OfficeFloorConsoleMain \
	$0 \
	net.officefloor.console.OfficeBuilding \
	run \
	$@