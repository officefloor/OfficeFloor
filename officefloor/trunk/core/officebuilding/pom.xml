<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.officefloor.core</groupId>
		<artifactId>core</artifactId>
		<version>2.18.0</version>
	</parent>
	<artifactId>officebuilding</artifactId>
	<name>OfficeBuilding</name>
	<description>Building to host the execution of multiple OfficeFloors</description>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jconsole_path>${java.home}/../lib/jconsole.jar</jconsole_path>
	</properties>
	<build>
		<plugins>
			<plugin>
				<!-- Include additional source directories -->
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>src/main/impl</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<systemPropertyVariables>
						<!-- Uncomment to provide debugging of SSL connections in tests -->
						<!-- <javax.net.debug>ssl,handshake</javax.net.debug> -->
					</systemPropertyVariables>
				</configuration>
			</plugin>
			<plugin>
				<!-- Create class path -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>test-script-directory-classpath</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>build-classpath</goal>
						</goals>
						<configuration>
							<includeScope>runtime</includeScope>
							<prefix>lib</prefix>
							<outputFilterFile>true</outputFilterFile>
							<outputFile>${project.build.directory}/dependencies.classpath</outputFile>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<!-- Append officebuilding to class path -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>append-officebuilding-to-classpath</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<concat destfile="${project.build.directory}/artifact.classpath">:lib/${project.artifactId}-${project.version}.jar</concat>
								<concat destfile="${project.build.directory}/classpath.properties">
									<filelist dir="${project.build.directory}"
										files="dependencies.classpath,artifact.classpath" />
								</concat>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>officecompiler</artifactId>
		</dependency>
		<dependency>
			<groupId>mx4j</groupId>
			<artifactId>mx4j-tools</artifactId>
		</dependency>
		<dependency>
			<groupId>com.oracle</groupId>
			<artifactId>jconsole</artifactId>
			<version>JVM</version>
			<scope>system</scope>
			<systemPath>${jconsole_path}</systemPath>
		</dependency>
	</dependencies>
</project>