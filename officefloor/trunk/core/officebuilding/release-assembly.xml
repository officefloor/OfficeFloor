<assembly>
	<id>release</id>
	<formats>
		<!-- Release bundles -->
		<format>zip</format>
		<format>tar.gz</format>
		<!-- Provide directory for testing -->
		<format>dir</format>
	</formats>
	<fileSets>
		<fileSet>
			<!-- boot.jar -->
			<outputDirectory>lib</outputDirectory>
			<directory>${project.build.directory}</directory>
			<includes>
				<include>boot.jar</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<!-- OfficeBuilding Layout -->
			<outputDirectory>/</outputDirectory>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<!-- Exclude class code and META-INF information -->
					<exclude>net/**</exclude>
					<exclude>META-INF/**</exclude>
				</excludes>
			</unpackOptions>
			<includes>
				<include>net.officefloor.core:officebuilding</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<!-- OfficeFloor core jars -->
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>