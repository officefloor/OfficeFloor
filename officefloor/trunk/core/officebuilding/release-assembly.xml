<assembly>
	<id>release</id>
	<formats>
		<!-- Release bundles -->
		<format>zip</format>
		<format>tar.gz</format>
		<!-- Provide directory for testing -->
		<format>dir</format>
	</formats>
	<fileSets>
		<fileSet>
			<!-- Executable files -->
			<directory>src/main/resources</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>bin/*</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<!-- Remaining files -->
			<directory>src/main/resources</directory>
			<outputDirectory>.</outputDirectory>
			<excludes>
				<exclude>bin/*</exclude>
			</excludes>
			<fileMode>0644</fileMode>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<!-- OfficeBuilding -->
			<outputDirectory>lib/core</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}
			</outputFileNameMapping>
			<includes>
				<include>${pom.groupId}:${pom.artifactId}</include>
				<include>mx4j:mx4j-tools</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<!-- OfficeFloor core jars -->
			<outputDirectory>lib/core</outputDirectory>
			<includes>
				<include>${pom.groupId}:officeframe</include>
				<include>${pom.groupId}:officexml</include>
				<include>${pom.groupId}:officecompiler</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<!-- OfficeFloor plug-ins -->
			<outputDirectory>lib/plugins</outputDirectory>
			<scope>runtime</scope>
			<includes>
				<include>*:officeplugin_*:jar</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>