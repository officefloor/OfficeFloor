<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>officefloor</artifactId>
		<groupId>net.officefloor</groupId>
		<version>0.0.1</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>officemodel</artifactId>
	<description>
		Office Floor model to be configured by the IDE.
	</description>
	<build>
		<plugins>
			<!--
				<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
				<execution>
				<id>add-source</id>
				<phase>generate-sources</phase>
				<goals>
				<goal>add-source</goal>
				</goals>
				<configuration>
				<sources>
				<source>src/auto</source>
				<source>src/raw</source>
				</sources>
				</configuration>
				</execution>
				</executions>
				</plugin>
			-->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>compile</id>
						<phase>compile</phase>
						<configuration>
							<tasks>
								<!-- Specifying properties -->
								<property name="compile_classpath"
									refid="maven.compile.classpath" />
								<property name="ver"
									value="${project.version}" />
								<property name="repo"
									value="${settings.localRepository}" />
								<property name="modelprojectdir"
									value="${basedir}" />
								<property name="modelprojecttarget"
									value="${project.build.outputDirectory}" />
								<!-- Generating the model classes -->
								<java
									classname="net.officefloor.model.generate.GenerateOfficeFloorModel">
									<arg value="${modelprojectdir}" />
									<classpath>
										<pathelement
											path="${compile_classpath}" />
										<pathelement
											location="${repo}/net/officefloor/officemodelgen/${ver}/officemodelgen-${ver}.jar" />
										<pathelement
											location="${repo}/net/officefloor/officecompiler/${ver}/officecompiler-${ver}.jar" />
										<pathelement
											location="${repo}/net/officefloor/officexml/${ver}/officexml-${ver}.jar" />
									</classpath>
								</java>
								<!-- Compiling the model classes -->
								<javac
									srcdir="${modelprojectdir}/src/auto"
									destdir="${modelprojecttarget}" fork="true">
									<classpath>
										<pathelement
											path="${compile_classpath}" />
									</classpath>
								</javac>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>net.officefloor</groupId>
			<artifactId>officeframe</artifactId>
			<version>0.0.1</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
		</dependency>
	</dependencies>
</project>

