	<build>
		<plugins>
			<plugin>
				<!-- Standard JVM for compilation -->
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<!-- Always include sources and javadoc for Eclipse -->
				<artifactId>maven-eclipse-plugin</artifactId>
				<configuration>
					<downloadSources>true</downloadSources>
					<downloadJavadocs>true</downloadJavadocs>
				</configuration>
			</plugin>
			<plugin>
				<!-- Ensure correct licensing -->
				<groupId>com.mycila.maven-license-plugin
				</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<configuration>
					<header>src/license/license-header.txt
					</header>
					<aggregate>true</aggregate>
					<excludes>
						<exclude>**/META-INF/services/**</exclude>
						<exclude>**/src/test/resources/**
						</exclude>
						<exclude>**/src/auto/**</exclude>
						<exclude>**/*.xml</exclude>
						<exclude>**/*.xsd</exclude>
						<exclude>**/*.exsd</exclude>
						<exclude>**/*.txt</exclude>
						<exclude>**/*.ofp</exclude>
						<exclude>**/*.properties</exclude>
						<exclude>**/*.apt</exclude>
						<exclude>**/*.xcf</exclude>
						<exclude>**/*.odg</exclude>
						<exclude>**/*.zip</exclude>
						<exclude>**/*.jar</exclude>
						<exclude>**/*.css</exclude>
						<exclude>**/*.js</exclude>
						<exclude>**/*.log</exclude>
						<exclude>**/*.args</exclude>
						<exclude>**/officebuilding</exclude>
					</excludes>
					<properties>
						<currentYear>2010</currentYear>
					</properties>
					<headerDefinitions>
						<headerDefinition>src/license/java-header-style.xml
						</headerDefinition>
					</headerDefinitions>
				</configuration>
			</plugin>
			<!-- START: project validation -->
			<plugin>
				<!-- Copy verifications file for use -->
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/verifier</outputDirectory>
							<resources>
								<resource>
									<directory>src/test/verifier</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<!-- Provide validation xml file with dependency versions -->
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<!--
									Obtain the raw test class path which has greatest number of
									dependencies (plus ensure a property is always available for
									replacefilterfile functionality to not fail)
								-->
								<property name="maven_classpath" refid="maven.test.classpath" />
								<echo file="${project.build.directory}/verifier/dependencies.raw"
									message="${maven_classpath}${path.separator}property${file.separator}version-available.jar" />

								<!--
									Remove the compile and test classes directory from the class
									path
								-->
								<replace file="${project.build.directory}/verifier/dependencies.raw"
									token="${project.build.outputDirectory}" value="" />
								<replace file="${project.build.directory}/verifier/dependencies.raw"
									token="${project.build.testOutputDirectory}" value="" />

								<!--
									Transform into properties file of:
									${artifactId}_version=${version}
								-->
								<copy file="${project.build.directory}/verifier/dependencies.raw"
									tofile="${project.build.directory}/verifier/dependencies.properties">
									<filterchain>
										<tokenfilter>
											<stringtokenizer delims="${path.separator}"
												suppressdelims="true" />
											<replaceregex
												pattern="(.+)${file.separator}([^${file.separator}]+)-([^-${file.separator}]+)\.([^.]+)"
												replace="@{\2_version}=\3${line.separator}" />
										</tokenfilter>
									</filterchain>
								</copy>

								<!-- Replace dependency versions in verifications file -->
								<replace file="${project.build.directory}/verifier/verifications.xml"
									replacefilterfile="${project.build.directory}/verifier/dependencies.properties" />
							</tasks>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>ant</groupId>
						<artifactId>ant-optional</artifactId>
						<version>1.5.3-1</version>
						<scope>runtime</scope>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<!--
					Verification done during initialise to allow further setup in
					validation
				-->
				<artifactId>maven-verifier-plugin</artifactId>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>verify</goal>
						</goals>
						<configuration>
							<verificationFile>${project.build.directory}/verifier/verifications.xml</verificationFile>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- END: project validation -->
		</plugins>
