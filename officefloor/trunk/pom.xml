<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.officefloor</groupId>
    <artifactId>officefloor</artifactId>
    <version>0.0.1</version>
    <packaging>pom</packaging>
    <name>Office Floor</name>
    <description>Parent Office Floor</description>
    <modules>
    
        <!-- Core functionality -->
        <module>officeframe</module>
        <module>officemodel</module>
        <module>officexml</module>
        <module>officecompiler</module>
        <module>officemodelgen</module>

        <!-- Plug-in functionality -->
        <module>officeplugin_jdbc</module>
        <module>officeplugin_jms</module>
        <module>officeplugin_socket</module>
        <module>officeplugin_spring</module>
        <module>officeplugin_hibernate</module>

        <!-- Tool functionality -->
        <module>officetool_filingcabinet</module>

        <!-- Ensure eclipse plug-ins are built before features -->
        <module>eclipse/plugins/eclipse.plugins</module>

        <!-- Core eclipse functionality -->
        <module>eclipse/plugins/net.officefloor.core</module>
        <module>eclipse/plugins/net.officefloor.ui</module>  
        <module>eclipse/features/net.officefloor.feature</module>

        <!-- Plug-in eclipse functionality -->
        <module>eclipse/plugins/net.officefloor.filingcabinet</module>
        <module>eclipse/plugins/net.officefloor.jdbc</module>
        <module>eclipse/plugins/net.officefloor.socket</module>
        <module>eclipse/features/net.officefloor.plugins.feature</module>

    </modules>
    <url>http://www.officefloor.net</url>
    <developers>
        <developer>
            <id>sagenschneider</id>
            <name>Daniel Sagenschneider</name>
            <roles>
            </roles>
        </developer>
    </developers>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-eclipse-plugin</artifactId>
                <configuration>
                    <downloadSources>true</downloadSources>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <reporting>
        <plugins>
        </plugins>
    </reporting>
</project>