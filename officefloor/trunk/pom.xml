<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.officefloor</groupId>
	<artifactId>officefloor</artifactId>
	<version>0.1.2</version>
	<packaging>pom</packaging>
	<name>OfficeFloor</name>
	<description>Parent OfficeFloor</description>
	<modules>
		<module>core</module>
		<module>plugins</module>
		<module>eclipse</module>
		<module>tools</module>
		<module>maven</module>
		<module>examples</module>
		<module>deploy</module>
	</modules>
	<url>http://www.officefloor.net</url>
	<inceptionYear>2005</inceptionYear>
	<issueManagement>
		<system>Tracker</system>
		<url>http://sourceforge.net/tracker/?atid=799427&amp;group_id=156349</url>
	</issueManagement>
	<developers>
		<developer>
			<id>sagenschneider</id>
			<name>Daniel Sagenschneider</name>
			<email>sagenschneider@users.sourceforge.net
			</email>
			<roles>
				<role>Administrator</role>
				<role>Developer</role>
			</roles>
		</developer>
		<developer>
			<id>melanies</id>
			<name>Melanie Sagenschneider</name>
			<email>melanies@users.sourceforge.net
			</email>
		</developer>
	</developers>
	<scm>
		<connection>
			scm:svn:https://officefloor.svn.sourceforge.net/svnroot/officefloor/officefloor/trunk
		</connection>
		<url>
			http://officefloor.svn.sourceforge.net/viewvc/officefloor/officefloor/trunk
		</url>
	</scm>
	<build>
		<plugins>
			<plugin>
				<!-- Keep standard JVM for compilation -->
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<!-- Always include sources and javadoc for Eclipse -->
				<artifactId>maven-eclipse-plugin</artifactId>
				<configuration>
					<downloadSources>true</downloadSources>
					<downloadJavadocs>true</downloadJavadocs>
				</configuration>
			</plugin>
			<plugin>
				<!-- Ensure correct licensing -->
				<groupId>com.mycila.maven-license-plugin
				</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<configuration>
					<header>src/license/license-header.txt
					</header>
					<aggregate>true</aggregate>
					<excludes>
						<exclude>**/META-INF/services/**</exclude>
						<exclude>**/src/test/resources/**
						</exclude>
						<exclude>**/src/auto/**</exclude>
						<exclude>**/*.xml</exclude>
						<exclude>**/*.xsd</exclude>
						<exclude>**/*.exsd</exclude>
						<exclude>**/*.txt</exclude>
						<exclude>**/*.ofp</exclude>
						<exclude>**/*.properties</exclude>
						<exclude>**/*.apt</exclude>
						<exclude>**/*.xcf</exclude>
						<exclude>**/*.odg</exclude>
						<exclude>**/*.zip</exclude>
						<exclude>**/*.jar</exclude>
						<exclude>**/*.css</exclude>
						<exclude>**/*.js</exclude>
						<exclude>**/*.log</exclude>
						<exclude>**/*.args</exclude>
						<exclude>**/officebuilding</exclude>
					</excludes>
					<properties>
						<currentYear>2010</currentYear>
					</properties>
					<headerDefinitions>
						<headerDefinition>src/license/java-header-style.xml
						</headerDefinition>
					</headerDefinitions>
				</configuration>
			</plugin>
			<!-- START: project validation -->
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/verifier
							</outputDirectory>
							<resources>
								<resource>
									<directory>src/test/verifier</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-verifier-plugin</artifactId>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>verify</goal>
						</goals>
						<configuration>
							<verificationFile>${project.build.directory}/verifier/verifications.xml
							</verificationFile>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- END: project validation -->
		</plugins>
	</build>
	<reporting>
		<plugins>
		</plugins>
	</reporting>
	<distributionManagement>
		<site>
			<id>officefloor.sf.net</id>
			<url>
				scp://sagenschneider@shell.sourceforge.net/home/groups/o/of/officefloor/htdocs
			</url>
		</site>
	</distributionManagement>
</project>