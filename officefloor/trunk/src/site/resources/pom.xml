<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.officefloor</groupId>
	<artifactId>install</artifactId>
	<version>${install.version}</version>
	<packaging>pom</packaging>
	<name>OfficeFloor Install</name>
	<description>OfficeFloor installation pom</description>
	<url>http://www.officefloor.net</url>
	<repositories>
		<repository>
			<id>officefloor</id>
			<name>OfficeFloor</name>
			<url>http://www.officefloor.net/maven2</url>
			<layout>default</layout>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
	</repositories>
	<properties>
		<install.version>2.1.0</install.version>
	</properties>
	<build>
		<plugins>
			<plugin>
				<!-- Download and unpack OfficeFloor to tmp directory -->
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>Download and unpack OfficeFloor to tmp</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<outputDirectory>${java.io.tmpdir}</outputDirectory>
							<artifactItems>
								<artifactItem>
									<groupId>net.officefloor.package</groupId>
									<artifactId>OfficeFloor</artifactId>
									<version>${install.version}</version>
									<type>zip</type>
									<classifier>release</classifier>
									<overWrite>false</overWrite>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<!-- Copy OfficeFloor files for install -->
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>Install OfficeFloor</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<property name="install.dirname" value="OfficeFloor-${install.version}" />

								<!-- Copy the files for install -->
								<mkdir dir="${basedir}/${install.dirname}" />
								<copy todir="${basedir}/${install.dirname}">
									<fileset dir="${java.io.tmpdir}/${install.dirname}/" />
								</copy>
								<!-- Ensure bin files are executable -->
								<chmod dir="${basedir}/${install.dirname}/bin" includes="**" perm="555" />
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>