<assembly>
	<id>release</id>
	<formats>
		<!-- Release bundles -->
		<format>zip</format>
		<format>tar.gz</format>
		<!-- Provide directory for testing -->
		<format>dir</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<!-- OfficeBuilding Layout -->
			<outputDirectory>/</outputDirectory>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<!-- Exclude class code and META-INF information -->
					<exclude>net/**</exclude>
					<exclude>META-INF/**</exclude>
				</excludes>
			</unpackOptions>
			<includes>
				<include>net.officefloor.core:officebuilding:jar</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<!-- OfficeBuilding jar -->
			<outputDirectory>lib/core</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>net.officefloor.core:officebuilding:jar</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<!-- OfficeFloor core jars -->
			<outputDirectory>lib/core</outputDirectory>
			<includes>
				<include>net.officefloor.core:*:jar</include>
				<include>mx4j:mx4j-tools</include>
			</includes>
			<excludes>
				<exclude>net.officefloor.core:officebuilding:jar</exclude>
				<exclude>net.officefloor.core:latest:jar</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<!-- OfficeFloor plug-ins -->
			<outputDirectory>lib/plugins</outputDirectory>
			<includes>
				<include>net.officefloor.plugin:*:jar</include>
			</includes>
			<excludes>
				<exclude>net.officefloor.plugin:latest:jar</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>