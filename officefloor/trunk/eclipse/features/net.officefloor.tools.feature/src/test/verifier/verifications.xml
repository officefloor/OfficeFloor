<verifications>
	<files>
		<!-- Ensure releasing latest version -->
		<file>
			<location>${basedir}/../../pom.xml</location>
			<contains><![CDATA[<dependencyManagement>[^;]*<artifactId>${project.artifactId}</artifactId>(\s)*<version>${project.version}</version>[^;]*</dependencyManagement>]]></contains>
		</file>

		<!-- Ensure correct version -->
		<file>
			<location>feature.xml</location>
			<contains><![CDATA[id="net.officefloor.tools.feature"(\s+)version="${project.version}"]]></contains>
		</file>
		<file>
			<location>feature.xml</location>
			<contains><![CDATA[<import(\s+)feature="net.officefloor.feature"(\s+)version="@{net.officefloor.feature_version}"]]></contains>
		</file>
		<file>
			<location>feature.xml</location>
			<contains><![CDATA[id="net.officefloor.demo"(\s+)version="@{net.officefloor.demo_version}]]></contains>
		</file>
	</files>
</verifications>