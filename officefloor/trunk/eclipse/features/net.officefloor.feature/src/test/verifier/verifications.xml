<verifications>
	<files>
		<!-- Ensure releasing latest version -->
		<file>
			<location>${basedir}/../../pom.xml</location>
			<contains><![CDATA[<dependencyManagement>[^;]*<artifactId>${project.artifactId}</artifactId>(\s)*<version>${project.version}</version>[^;]*</dependencyManagement>]]></contains>
		</file>

		<!-- Ensure correct versions -->
		<file>
			<location>feature.xml</location>
			<contains><![CDATA[id="net.officefloor.feature"(\s+)version="${project.version}"]]></contains>
		</file>
		<file>
			<location>feature.xml</location>
			<contains><![CDATA[id="net.officefloor.core"(\s+)version="@{net.officefloor.core_version}"]]></contains>
		</file>
		<file>
			<location>feature.xml</location>
			<contains><![CDATA[id="net.officefloor.ui"(\s+)version="@{net.officefloor.ui_version}"]]></contains>
		</file>
	</files>
</verifications>