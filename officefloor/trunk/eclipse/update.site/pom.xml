<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.officefloor.eclipse</groupId>
		<artifactId>eclipse</artifactId>
		<version>1.2.0</version>
	</parent>
	<artifactId>update.site</artifactId>
	<name>Eclipse Update Site</name>
	<description>Generates update site content for OfficeFloor in Eclipse.</description>
	<packaging>eclipse-update-site</packaging>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<distributionManagement>
		<repository>
			<!-- Deploy to temp to not release site.zip -->
			<id>Ignore</id>
			<name>Ignore as using ant to deploy</name>
			<url>file://${java.io.tmpdir}</url>
		</repository>
	</distributionManagement>
	<build>
		<plugins>
			<plugin>
				<!-- Deploy the site content -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>deploy-update-site-content</id>
						<phase>deploy</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<echo>Deploying the update site content to SourceForge</echo>
								<copy todir="${project.basedir}/target/site"
									file="${project.basedir}/src/main/resources/index.html" />
								<exec dir="${project.basedir}/target/site" executable="rsync"
									failonerror="true">
									<arg
										line="-v -e ssh -r . sagenschneider,officefloor@shell.sourceforge.net:/home/frs/project/o/of/officefloor/eclipse/update" />
								</exec>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>net.officefloor.feature</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>net.officefloor.woof.feature</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>net.officefloor.plugins.feature</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>net.officefloor.tools.feature</artifactId>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<!-- Profile for building -->
			<id>build-repositories</id>
			<activation>
				<file>
					<exists>${basedir}/pom.xml</exists>
				</file>
			</activation>
			<repositories>
				<repository>
					<!-- OfficeFloor -->
					<id>officefloor-eclipse</id>
					<layout>p2</layout>
					<url>http://www.officefloor.net/update</url>
				</repository>
			</repositories>
		</profile>
	</profiles>
</project>