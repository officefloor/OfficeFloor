<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.officefloor.eclipse</groupId>
		<artifactId>eclipse</artifactId>
		<version>0.2.1</version>
	</parent>
	<artifactId>update.site</artifactId>
	<version>0.2.1</version>
	<name>Eclipse Update Site</name>
	<description>Generates update site content for OfficeFloor in Eclipse.</description>
	<packaging>eclipse-update-site</packaging>
	<distributionManagement>
		<repository>
			<!-- Deploy to temp to not release site.zip -->
			<id>Ignore</id>
			<name>Ignore as using ant to deploy</name>
			<url>file://${java.io.tmpdir}</url>
		</repository>
	</distributionManagement>
	<build>
		<plugins>
			<plugin>
				<!-- Deploy the site content -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>deploy-update-site-content</id>
						<phase>deploy</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<echo>Deploying the update site content to SourceForge</echo>
								<copy todir="${project.basedir}/target/site"
									file="${project.basedir}/src/main/resources/index.html" />
								<exec dir="${project.basedir}/target/site" executable="rsync"
									failonerror="true">
									<arg
										line="-e ssh -r . sagenschneider,officefloor@frs.sourceforge.net:/home/frs/project/o/of/officefloor/eclipse/update" />
								</exec>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>