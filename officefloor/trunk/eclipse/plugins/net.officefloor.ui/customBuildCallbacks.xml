<!-- ===================================================================== -->
<!-- Custom targets for Eclipse build to integrate it with Maven           -->
<!-- Specify the following in build.properties :                           -->
<!--      customBuildCallbacks=customBuildCallbacks.xml                    -->
<!-- ===================================================================== -->
<project name="Build specific targets and properties" default="noDefault">

	<!-- ===================================================================== -->
	<!-- Required targets of custom build file                                 -->
	<!-- ===================================================================== -->
	<target name="noDefault">
		<echo message="This file must be called with explicit targets" />
	</target>
	<target name="pre.build.jars">
	</target>
	<target name="post.build.jars">
	</target>
	<target name="pre.build.sources">
	</target>
	<target name="post.build.sources">
	</target>
	<target name="pre.name">
	</target>
	<target name="pre.@dot">
	</target>
	<target name="post.compile.name">
	</target>

	<!-- ===================================================================== -->
	<!-- Integrate Eclipse and Maven builds                                    -->
	<!--                                                                       -->
	<!-- Copy the following:                                                   -->
	<!--     maven resources  to  eclipse build directory                      -->
	<!--     eclipse built files   to   maven build directory                  -->
	<!-- ===================================================================== -->
	<target name="post.compile.@dot">
		<property name="maven.src.resources" value="${basedir}/src/main/resources" />
		<echo>MAVEN CUSTOM STEP: Copying resources to be included (cp ${maven.src.resources} to ${target.folder})</echo>
		<mkdir dir="${maven.src.resources}" /> <!-- Ensure directory exists to stop failures -->
		<copy todir="${target.folder}">
			<fileset dir="${maven.src.resources}" />
		</copy>
		<property name="maven.target.classes" value="${basedir}/target/classes" />
		<echo>MAVEN CUSTOM STEP: Copying built classes and resources for maven and other plug-ins to access (cp ${target.folder} to ${maven.target.classes})</echo>
		<copy todir="${maven.target.classes}">
			<fileset dir="${target.folder}" />
		</copy>
	</target>

	<!-- ===================================================================== -->
	<!-- Remaining required targets of custom build file                       -->
	<!-- ===================================================================== -->
	<target name="post.name">
	</target>
	<target name="post.@dot">
	</target>
	<target name="pre.gather.bin.parts">
	</target>
	<target name="post.gather.bin.parts">
	</target>
	<target name="pre.gather.sources">
	</target>
	<target name="post.gather.sources">
	</target>
	<target name="pre.gather.logs">
	</target>
	<target name="post.gather.logs">
	</target>
	<target name="pre.clean">
	</target>
	<target name="post.clean">
	</target>
</project>