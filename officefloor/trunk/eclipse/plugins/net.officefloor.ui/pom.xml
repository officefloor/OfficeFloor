<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.officefloor.eclipse</groupId>
		<artifactId>eclipse</artifactId>
		<relativePath>../../pom.xml</relativePath>
		<!--
			Reminder: do not forget to update bin.include of build.properties on
			changing version to include the correct jar dependencies in building
			this plug-in.
		-->
		<version>0.1.2</version>
	</parent>
	<artifactId>net.officefloor.ui</artifactId>
	<name>Eclipse UI</name>
	<description>OfficeFloor user interface Eclipse plug-in</description>
	<packaging>zip</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>add-test-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-test-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>src/test/pde</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>plugin</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<archive>
								<manifestFile>META-INF/MANIFEST.MF</manifestFile>
							</archive>
							<descriptors>
								<descriptor>plugin-assembly.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>net.officefloor.core</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
</project>