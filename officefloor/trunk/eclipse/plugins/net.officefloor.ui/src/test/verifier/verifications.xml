<verifications>
	<files>
		<file>
			<!-- Ensure releasing latest version -->
			<location>${basedir}/../../latest/pom.xml</location>
			<contains><![CDATA[<artifactId>${project.artifactId}</artifactId>(\s*)<version>${project.version}</version>]]></contains>
		</file>

		<!-- Ensure correct versions -->
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>Bundle-Version: ${project.version}</contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>net.officefloor.core;bundle-version="@{net.officefloor.core_version}"</contains>
		</file>
		
		<!-- Ensure using latest dependency version -->
		<file>
			<location>${basedir}/../../latest/pom.xml</location>
			<contains><![CDATA[<artifactId>net.officefloor.core</artifactId>(\s*)<version>@{net.officefloor.core_version}</version>]]></contains>
		</file>
	</files>
</verifications>