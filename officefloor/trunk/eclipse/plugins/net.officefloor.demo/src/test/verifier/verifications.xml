<verifications>
	<files>
		<!-- Ensure correct versions in Eclipse plugin -->
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>Bundle-Version: ${project.version}</contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>Require-Bundle:([^:]*)net.officefloor.core;bundle-version="@{net.officefloor.core_version}"</contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>Require-Bundle:([^:]*)net.officefloor.ui;bundle-version="@{net.officefloor.ui_version}"</contains>
		</file>

		<!-- Ensure correct versions on build class path -->
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>Bundle-ClassPath:([^:]*)officetool_demo-@{officetool_demo_version}.jar</contains>
		</file>
		
		<!-- Ensure correct versions included for build -->
		<file>
			<location>build.properties</location>
			<contains>bin.includes =([^=]*)officetool_demo-@{officetool_demo_version}.jar</contains>
		</file>
	</files>
</verifications>