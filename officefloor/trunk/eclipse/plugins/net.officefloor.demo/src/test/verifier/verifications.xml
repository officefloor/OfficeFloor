<verifications>
	<files>
		<file>
			<!-- Ensure releasing latest version -->
			<location>${basedir}/../../latest/pom.xml</location>
			<contains><![CDATA[<artifactId>${project.artifactId}</artifactId>(\s*)<version>${project.version}</version>]]></contains>
		</file>

		<!-- Ensure correct versions -->
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>Bundle-Version: ${project.version}</contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>net.officefloor.core;bundle-version="@{net.officefloor.core_version}"</contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>net.officefloor.ui;bundle-version="@{net.officefloor.ui_version}"</contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>net.officefloor.core-@{net.officefloor.core_version}.jar</contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>net.officefloor.ui-@{net.officefloor.ui_version}.jar</contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>officetool_demo-@{officetool_demo_version}.jar</contains>
		</file>
		<file>
			<location>build.properties</location>
			<contains>officetool_demo-@{officetool_demo_version}.jar</contains>
		</file>
		
		<!-- Ensure using latest dependency version -->
		<file>
			<location>${basedir}/../../latest/pom.xml</location>
			<contains><![CDATA[<artifactId>net.officefloor.feature</artifactId>(\s*)<version>@{net.officefloor.feature_version}</version>]]></contains>
		</file>
	</files>
</verifications>