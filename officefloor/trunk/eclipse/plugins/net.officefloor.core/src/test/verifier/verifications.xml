<verifications>
	<files>
		<!-- Ensure releasing latest version -->
		<file>
			<location>${basedir}/../../../pom.xml</location>
			<contains><![CDATA[<dependencyManagement>.*<artifactId>${project.artifactId}</artifactId>(\s)*<version>${project.version}</version>.*</dependencyManagement>]]></contains>
		</file>

		<!-- Ensure correct versions in Eclipse plugin -->
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>Bundle-Version: ${project.version}</contains>
		</file>

		<!-- Ensure correct versions on build class path -->
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>Bundle-ClassPath:([^:]*)officeframe-@{officeframe_version}.jar</contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>Bundle-ClassPath:([^:]*)officexml-@{officexml_version}.jar</contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains>Bundle-ClassPath:([^:]*)officecompiler-@{officecompiler_version}.jar</contains>
		</file>
		
		<!-- Ensure correct versions included for build -->
		<file>
			<location>build.properties</location>
			<contains>bin.includes =([^=]*)officeframe-@{officeframe_version}.jar</contains>
		</file>
		<file>
			<location>build.properties</location>
			<contains>bin.includes =([^=]*)officexml-@{officexml_version}.jar</contains>
		</file>
		<file>
			<location>build.properties</location>
			<contains>bin.includes =([^=]*)officecompiler-@{officecompiler_version}.jar</contains>
		</file>
				
	</files>
</verifications>