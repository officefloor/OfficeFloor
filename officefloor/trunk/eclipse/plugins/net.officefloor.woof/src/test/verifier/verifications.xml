<verifications>
	<files>
		<!-- Ensure using latest version -->
		<file>
			<location>${basedir}/../../../pom.xml</location>
			<contains><![CDATA[<dependencyManagement>[^;]*<artifactId>${project.artifactId}</artifactId>[^;]*</dependencyManagement>]]></contains>
		</file>

		<!-- Ensure correct versions in Eclipse plugin -->
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Bundle-Version: ${project.version}]]></contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Require-Bundle:([^:]*)net.officefloor.core;bundle-version="@{net.officefloor.core_version}"]]></contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Require-Bundle:([^:]*)net.officefloor.ui;bundle-version="@{net.officefloor.ui_version}"]]></contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Require-Bundle:([^:]*)net.officefloor.socket;bundle-version="@{net.officefloor.socket_version}"]]></contains>
		</file>

		<!-- Ensure correct versions on build class path -->
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Bundle-ClassPath:([^:]*)officeplugin_servlet-@{officeplugin_servlet_version}.jar]]></contains>
		</file>
		<file>
			<location>META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Bundle-ClassPath:([^:]*)officeplugin_woof-@{officeplugin_woof_version}.jar]]></contains>
		</file>

		<!-- Ensure correct versions included for build -->
		<file>
			<location>build.properties</location>
			<contains><![CDATA[bin.includes =([^=]*)officeplugin_servlet-@{officeplugin_servlet_version}.jar]]></contains>
		</file>
		<file>
			<location>build.properties</location>
			<contains><![CDATA[bin.includes =([^=]*)officeplugin_woof-@{officeplugin_woof_version}.jar]]></contains>
		</file>
	</files>
</verifications>