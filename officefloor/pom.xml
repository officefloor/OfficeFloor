				<!-- 2) mvn site:stage -->
				<!-- 3) cp -R target/site/apidocs/ target/staging/ -->
				<!-- 4) rm -rf target/site -->
				<!-- 5) mv target/staging/ target/site -->
				<!-- 6) rm -rf target/linkcheck -->
