<verifications>
	<files>
		<!-- Ensure using latest version -->
		<file>
			<location>${basedir}/../../pom.xml</location>
			<contains><![CDATA[<dependencyManagement>[^;]*<artifactId>${project.artifactId}</artifactId>[^;]*</dependencyManagement>]]></contains>
		</file>

		<!-- Ensure releasing new version -->
		<file>
			<location>category.xml</location>
			<contains><![CDATA[<feature(\s)+url="features/net.officefloor.feature_${project.version}.jar"(\s)+id="net.officefloor.feature"(\s)+version="${project.version}">]]></contains>
		</file>
		<file>
			<location>category.xml</location>
			<contains><![CDATA[<feature(\s)+url="features/net.officefloor.woof.feature_${project.version}.jar"(\s)+id="net.officefloor.woof.feature"(\s)+version="${project.version}">]]></contains>
		</file>
	</files>
</verifications>